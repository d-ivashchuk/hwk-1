// scotto9.dtsi - Scotto9 shield for nice!nano v2
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <3>;
        rows = <3>;
        map = <
            RC(0,0) RC(0,1) RC(0,2)
            RC(1,0) RC(1,1) RC(1,2)
            RC(2,0) RC(2,1) RC(2,2)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";
        
        diode-direction = "col2row";
        
        // Columns: Using sequential GPIO pins on left header
        // 017 (P0.17), 020 (P0.20), 022 (P0.22)
        col-gpios
            = <&gpio0 17 GPIO_ACTIVE_HIGH>   // Pin labeled 017
            , <&gpio0 20 GPIO_ACTIVE_HIGH>   // Pin labeled 020
            , <&gpio0 22 GPIO_ACTIVE_HIGH>   // Pin labeled 022
            ;

        // Rows: Using direct GPIO pins visible on your board
        // 031 (P0.31), 029 (P0.29), 002 (P0.02)
        row-gpios
            = <&gpio0 31 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // Pin labeled 031 (top row)
            , <&gpio0 29 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // Pin labeled 029 (middle row)
            , <&gpio0 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // Pin labeled 002 (bottom row)
            ;
    };
};
